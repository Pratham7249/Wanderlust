<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Waste Detection Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/holographic.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .holographic-card {
            /* Add your holographic card styles here if not in holographic.css */
        }
        .status-card {
            width: 150px; /* Adjust as needed */
        }
    </style>
</head>
<body>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1 class="text-center">Waste Detection Dashboard</h1>
            <p class="lead text-center mb-4">Upload and analyze waste detection images</p>
            <p class="lead text-center mb-4">How to treat the waste </p>
            <div class="row mb-4 how">
                <div class="d-flex justify-content-around">
                    <div class="card shadow-sm holographic-card status-card">
                        <div class="card-body text-center">
                            <i class="fa-solid fa-check text-success" style="font-size: 2em;"></i>
                            <h6 class="card-title mt-2">Model Loaded</h6>
                            <p class="card-text text-muted">Operational</p>
                        </div>
                    </div>
                    <div class="card shadow-sm holographic-card status-card">
                        <div class="card-body text-center">
                            <i class="fa-solid fa-check text-success" style="font-size: 2em;"></i>
                            <h6 class="card-title mt-2">Api Connected</h6>
                            <p class="card-text text-muted">Operational</p>
                        </div>
                    </div>
                    <div class="card shadow-sm holographic-card status-card">
                        <div class="card-body text-center">
                            <i class="fa-solid fa-check text-success" style="font-size: 2em;"></i>
                            <h6 class="card-title mt-2">Processing Ready</h6>
                            <p class="card-text text-muted">Operational</p>
                        </div>
                    </div>
                </div>
            </div>

            <div id="uploadArea" class="card bg-light p-5 text-center">
                <i class="bi bi-upload display-4 text-muted"></i>
                <h5 class="mt-3">Drag and drop your image here</h5>
                <p class="text-muted">or click to select a file</p>
                <input type="file" class="form-control mt-3" id="imageUpload" accept="image/*">
                <button class="btn btn-primary mt-3" onclick="processImage()">Analyze Image</button>
            </div>

            <div id="geminiResponse" class="mt-4">
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="/css/holographic.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    async function processImage() {
        const imageInput = document.getElementById('imageUpload');
        const responseDiv = document.getElementById('geminiResponse');
        const uploadArea = document.getElementById('uploadArea');
        const file = imageInput.files[0];

        if (!file) {
            responseDiv.innerHTML = '<p class="text-danger">Please upload an image.</p>';
            return;
        }

        const formData = new FormData();
        formData.append('image', file);
        formData.append('prompt', 'detect the waste, how to treat it, how to recycle, type of waste');

        responseDiv.innerHTML = '<p>Processing image...</p>';
        uploadArea.classList.add('loading'); // Add a loading class if you have styles for it

        try {
            const response = await fetch('/process-image', { // Assuming your backend endpoint is /process-image
                method: 'POST',
                body: formData
            });

            uploadArea.classList.remove('loading'); // Remove loading class

            if (response.ok) {
                const data = await response.json();
                responseDiv.innerHTML = `
                    <div class="card shadow-sm p-3">
                        <h5 class="card-title">Analysis Result</h5>
                        ${data.detectedWaste ? `<p><strong>Detected Waste:</strong> ${data.detectedWaste}</p>` : ''}
                        ${data.treatment ? `<p><strong>Treatment:</strong> ${data.treatment}</p>` : ''}
                        ${data.recyclingInstructions ? `<p><strong>Recycling:</strong> ${data.recyclingInstructions}</p>` : ''}
                        ${data.wasteType ? `<p><strong>Type of Waste:</strong> ${data.wasteType}</p>` : ''}
                        ${!data.detectedWaste && !data.treatment && !data.recyclingInstructions && !data.wasteType ? '<p class="text-muted">No specific information found.</p>' : ''}
                    </div>
                `;
            } else {
                const errorData = await response.json();
                responseDiv.innerHTML = `<p class="text-danger">Error processing image: ${errorData.error || 'Something went wrong'}</p>`;
            }
        } catch (error) {
            console.error('Error:', error);
            responseDiv.innerHTML = '<p class="text-danger">An unexpected error occurred.</p>';
        }
    }
</script>
</body>
</html>
